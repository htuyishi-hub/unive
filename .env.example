# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-key-here

# Database
DATABASE_URI=sqlite:///ur_courses.db
# Or for PostgreSQL: postgresql://user:password@localhost/ur_courses

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/auth/google/callback

# File Uploads
MAX_FILE_SIZE=104857600  # 100MB in bytes

# CORS
FRONTEND_URL=http://localhost:5000

# Redis Configuration (for caching and rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Email Configuration (for magic links and notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@ur.ac.rw
MAIL_FROM_NAME=UR Course Management

# Optional: Email for production (SendGrid, Mailgun, etc.)
# MAIL_SERVER=smtp.sendgrid.net
# MAIL_PORT=587
# MAIL_USE_TLS=true
# MAIL_USERNAME=apikey
# MAIL_PASSWORD=your-sendgrid-api-key

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/ur-courses.log

# Production Settings
SESSION_COOKIE_SECURE=true
